.animals
  display flex
  flex-direction column
  width 100%
  @media screen and (min-width: 769px)
    flex-direction: row;
    height: 400px

  &-left
  &-right
    width: 100%
    height: 100%
    display: flex;
    flex-direction: column;
    @media screen and (min-width: 769px) {
      width: 30%
    }

  &-middle
    width: 100%
    height: 100%
    display: flex;
    flex-direction: column;
    @media screen and (min-width: 769px) {
      width: 40%
    }

    &-top
    &-bottom
      height: 50%
      width: 100%
      display: flex;

    &-img
      width: 50%
      height: 100%

  &-left
    &-top
      height: 50%
      &-img
        width: 100%
        height: 100%
    &-bottom
      display: flex;
      height: 50%
      &-img
        width: 50%
        height: 100%

.colum-reverse
  flex-direction: column-reverse;
