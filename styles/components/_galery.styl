.galery
  display: flex;
  flex-wrap: wrap;
  justify-content: center;

.pet
  width: 400px
  display: flex
  flex-direction: column;
  background: white
  margin: 15px


  &-cover
    position: relative;

  &-name
    position: absolute;
    width: 100%
    height: 20%
    z-index: 10
    bottom 0px
    font-size: 3em
    font-weight: bold;
    color $font4
    text-align: center;
    background: linear-gradient(to top, #000, rgba(0, 0, 0, 0))


  &-img
    width: 100%
    height: 100%

  &-contact
    display: flex;
    flex-direction: column;
    align-items: center
    justify-content: center
    padding: 15px

  &-owner
    font-size: 1.5em
    color $font
    margin-bottom: 5px
  &-tel
    font-size: 1.2em
    font-weight: bold;
    color $font2
